{
  "name": "messenger-service",
  "version": "0.0.1",
  "description": "REST Based API for sending and receiving structured JSON messages delivered via Whisper",
  "repository": {
    "type": "git",
    "url": "https://github.com/EYBlockchain/radish-34.git"
  },
  "author": "Sam Stokes <sam.stokes@consensys.net>",
  "license": "CC0 1.0 Universal",
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/config/",
      "/__tests__/README.md",
      "/__tests__/integration.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coverageReporters": [],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "scripts": {
    "start": "NODE_ENV=production node ./start.js",
    "start:dev": "NODE_ENV=development nodemon ./start.js",
    "start:test": "NODE_ENV=test nodemon ./start.js",
    "test": "NODE_ENV=test jest --verbose --runInBand --forceExit",
    "test:integration": "jest --verbose --runInBand --forceExit ./__tests__/integration.test.js",
    "lint:fix": "eslint --fix",
    "lint": "eslint",
    "prettify": "prettier --write **/*.js"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "colors": "1.3.2",
    "express": "^4.17.1",
    "mongoose": "^5.7.1",
    "morgan": "^1.9.1",
    "object-hash": "^2.0.0",
    "randomstring": "^1.1.5",
    "web3": "1.0.0-beta.36"
  },
  "devDependencies": {
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "!(*test).js,": [
      "eslint --fix",
      "git add"
    ]
  }
}
