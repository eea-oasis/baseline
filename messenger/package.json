{
  "name": "messenger-service",
  "version": "0.0.1",
  "description": "REST Based API for sending and receiving structured JSON messages delivered via Whisper",
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/config/",
      "/__tests__/README.md",
      "/__tests__/integration.test.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "scripts": {
    "start": "NODE_ENV=production node ./start.js 1",
    "start:test": "NODE_ENV=test node ./start.js 1",
    "test": "NODE_ENV=test jest --verbose --runInBand --forceExit",
    "test:integration": "jest --verbose --runInBand --forceExit ./__tests__/integration.test.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EYBlockchain/radish-34.git"
  },
  "author": "Sam Stokes <sam.stokes@consensys.net>",
  "license": "CC0 1.0 Universal",
  "dependencies": {
    "body-parser": "^1.19.0",
    "colors": "1.3.2",
    "mongoose": "^5.7.1",
    "morgan": "^1.9.1",
    "object-hash": "^2.0.0",
    "randomstring": "^1.1.5",
    "web3": "1.0.0-beta.36"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "supertest": "^4.0.2"
  }
}
