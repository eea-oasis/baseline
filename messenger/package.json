{
  "name": "messenger-service",
  "version": "0.0.1",
  "description": "REST Based API for sending and receiving structured JSON messages delivered via Whisper",
  "author": "Sam Stokes <sam.stokes@consensys.net>",
  "license": "CC0 1.0 Universal",
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/config/"
    ],
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coverageReporters": [
      "text"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "coverage",
      "config",
      "docs"
    ],
    "verbose": true
  },
  "scripts": {
    "start": "NODE_ENV=production node ./src/index.js",
    "start:dev": "NODE_ENV=development nodemon ./src/index.js",
    "start:test": "NODE_ENV=test nodemon ./src/index.js",
    "build": "bin/build-image.sh",
    "deploy:up": "docker-compose -f ../docker-compose.yml up --build geth-node mongo-buyer redis-buyer",
    "deploy:down": "docker-compose down",
    "test": "NODE_ENV=test jest --runInBand --forceExit --coverage",
    "lint:fix": "eslint --fix .",
    "lint": "eslint .",
    "prettify": "prettier --write **/*.js",
    "docs": "npx apidoc -i src/ -o docs/"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "bull": "^3.12.1",
    "bull-board": "^0.6.0",
    "colors": "^1.4.0",
    "express": "^4.17.1",
    "express-winston": "^4.0.3",
    "mongoose": "^5.9.2",
    "object-hash": "^2.0.3",
    "randomstring": "^1.1.5",
    "web3": "^1.2.6",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "apidoc": "^0.20.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "mongodb": "^3.5.3",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "/messenger/src/**/*.js,": [
      "eslint --fix"
    ]
  }
}
