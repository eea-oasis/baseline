    "validate": "npm run lint && npm run lint:md"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "eslint": "^5.15.2",
    "eslint-config-codfish": "^2.5.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.2.1",
    "markdownlint-cli": "^0.17.0",
    "prettier": "^1.16.4"
  }
}
